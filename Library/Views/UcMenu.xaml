<UserControl x:Class="Library.Views.UcMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Library.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             DataContext="{Binding Source={StaticResource Locator}, Path=Menu}">
    <Menu>
        <MenuItem Header="Search" Command="{Binding SearchAction}">

        </MenuItem>
        <MenuItem Header="Add" Command="{Binding AddBookAction}">

        </MenuItem>
        <MenuItem Header="Remove" Command="{Binding RemoveBookAction}">

        </MenuItem>
        <MenuItem Header="Update" Command="{Binding UpdateAction}">

        </MenuItem>
        <MenuItem Header="ShowAll" Command="{Binding ShowAllItemsAction}">

        </MenuItem>
    </Menu>
</UserControl>
