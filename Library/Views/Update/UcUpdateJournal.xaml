<UserControl x:Class="Library.Views.UcUpdateJournal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Library.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             DataContext="{Binding Source={StaticResource Locator}, Path=UpdateJournal}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <local:UcJournalsListView Grid.Row="1" Grid.Column="2" Grid.RowSpan="3"/>
        <TextBlock Text="Journals" Grid.Column="2" Style="{Binding Source={StaticResource AddView}}"/>

        <Button Content="Update Price" Grid.Row="1" Style="{Binding Source={StaticResource AddBookJournal}}" Command="{Binding UpdatePriceAction}"/>
        <TextBox Grid.Row="1" Grid.Column="1" Style="{Binding Source={StaticResource Add}}" Text="{Binding NewPrice}"/>

        <Button Content="Add Type" Grid.Row="2" Style="{Binding Source={StaticResource AddBookJournal}}" Command="{Binding AddTypeAction}"/>
        <ComboBox Grid.Row="2" Grid.Column="1" Style="{Binding Source={StaticResource AddCombo}}" ItemsSource="{Binding JournalTypes}" SelectedValue="{Binding AddedJournalType}"/>

        <Button Content="Remove Type" Grid.Row="3" Style="{Binding Source={StaticResource AddBookJournal}}" Command="{Binding RemoveTypeAction}"/>
        <ComboBox Grid.Row="3" Grid.Column="1" Style="{Binding Source={StaticResource AddCombo}}" ItemsSource="{Binding JournalTypes}" SelectedValue="{Binding RemoveedJournalType}"/>

    </Grid>
</UserControl>
