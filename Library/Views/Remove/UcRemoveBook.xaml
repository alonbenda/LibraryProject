<UserControl x:Class="Library.Views.UcRemoveBook"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Library.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             DataContext="{Binding Source={StaticResource Locator}, Path=RemoveBook}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <local:UcBooksListView Grid.Row="1" Grid.Column="1"/>
        <TextBlock Text="Books" Grid.Column="1" Style="{Binding Source={StaticResource AddView}}"/>

        <Button Content="Sale Book" Grid.Row="1" Style="{Binding Source={StaticResource Sale}}" Command="{Binding SaleItems}"/>
        <Button Content="Remove Book" Grid.Row="1" Style="{Binding Source={StaticResource Remove}}" Command="{Binding RemoveItems}"/>

    </Grid>
</UserControl>
